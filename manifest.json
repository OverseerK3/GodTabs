{
  "manifest_version": 3,
  "name": "GodTabs",
  "version": "1.0.0",
  "description": "Ultimate tab management extension with advanced features for power users",
  "author": "GodTabs Team",
  "homepage_url": "https://github.com/your-username/godtabs",
  "minimum_chrome_version": "88",
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "GodTabs - Manage Your Tabs",
    "default_icon": {

      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "tabs",
    "storage",
    "sessions",
    "activeTab",
    "notifications"
  ],
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Open GodTabs popup"
    },
    "save_session": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save current tab session"
    },
    "create_workspace": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "mac": "Command+Shift+W"
      },
      "description": "Create new workspace from current tabs"
    },
    "switch_workspace": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Cycle through available workspaces"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}